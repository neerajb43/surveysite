<%- include ../partials/surveyheader.ejs %>

<%- include ../partials/navbar.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <br>
            <h1><%= title %></h1>
        
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Your Name"
                    name="name" 
                    value="<%= survey.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="email" class="form-control"
                    id="emailTextField"
                    placeholder="Enter Your email"
                    name="email" 
                    value="<%= survey.email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="ageTextField">Age</label>
                    <input type="text" class="form-control"
                    id="ageTextField"
                    placeholder="Enter Your Age"
                    name="age" 
                    value="<%= survey.age %>"
                    required>
                </div>

           <br>
        
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-pencil"></i> Update </button>
                
                    <a href="/survey-app" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>
<br>
<hr>

<%- include ../partials/footer.ejs %>  

<%- include ../partials/scripts.ejs %>